generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

// backend/prisma/schema.prisma

model User {
  id        String     @id @default(uuid())
  email     String     @unique
  password  String
  role      String     @default("USER")
  createdAt DateTime   @default(now())
  
  // Add this line to link users to their files
  documents Document[] 
}

model Document {
  id        String   @id @default(uuid())
  name      String   // Original filename (e.g., "resume.pdf")
  s3Key     String   @unique // The ID in LocalStack S3
  size      Int      // File size in bytes
  mimeType  String   // e.g., "application/pdf"
  content   String?  // Extracted text content for search/RAG
  
  userId    String
  user      User     @relation(fields: [userId], references: [id])
  
  createdAt DateTime @default(now())
}

enum Role {
  USER
  ADMIN
}